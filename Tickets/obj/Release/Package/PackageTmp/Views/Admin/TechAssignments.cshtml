@model Tickets.ViewModels.TicketsCreateViewModel


@{
    ViewBag.Title = "TechAssignments";
}
<br />
<div class="panel">
    <div class="panel-heading">
        <h1 class="panel-title" style="font-size: 30px;">
            Assign Techs to Sites
        </h1>
    </div>
    <div class="panel-body">
        <div id="myDiv" class="col-xs-12 content table-responsive table-full-width">
            <table class="table table-hover table-striped">
                <tr>
                    <th>
                        School
                    </th>
                    <th>
                        Tech
                    </th>
                    <th>
                        Days
                    </th>
                </tr>

                @foreach (var item in Model.schoolassignments)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.School, "SchoolAssignment", new { selectedSchool = @item.School }, new { @style = "color:black;" })<br />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TechName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Days)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>