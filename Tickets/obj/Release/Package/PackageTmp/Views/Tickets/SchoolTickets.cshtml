<script src="http://cdn.datatables.net/buttons/1.2.4/js/buttons.print.min.js"></script>

<script>
    $(document).ready(function () {

        function RefreshTables() {

            var d = new Date();
            var weekday = new Array(7);
            weekday[0] =  "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            var n = weekday[d.getDay()];

                var table1 = $("#myTable").DataTable({
                    ajax: {
                        url: "/api/TicketsForSchools",
                        data: {school: '@Model.Site'},
                        dataSrc: ""
                    },
                    retrieve: true,
                    bPaginate: false, //hide pagination
                    bFilter: false, //hide Search bar
                    bInfo: false, // hide showing entries
                    columns: [
                        {
                            data: "TicketNumber",
                        },
                        {
                            data: "Site"
                        },
                        {
                            data: "TroubleUser"
                        },
                        {
                            data: "Location"
                        },
                        {
                            data: "Equipment"
                        },
                        {
                            data: "Issue"
                        },
                        {
                            data: "TicketNumber",
                            render: function (data, type, ticket) {
                                return "<a class='btn btn-default' href='/Tickets/Edit/" + data + "'>Edit</a>"
                            }
                        }
                    ]
                });
                var table2 = $("#myschools").DataTable({
                    ajax: {
                        url: "/api/TechOpenTickets/" + @Model.TechID,
                        data: {day: n },
                        dataSrc: ""
                    },
                    retrieve: true,
                    bPaginate: false, //hide pagination
                    bFilter: false, //hide Search bar
                    bInfo: false, // hide showing entries
                    columns: [
                        {
                            data: "School",
                            render: function (data, type, ticket) {
                                return "<a style='color:grey;' href='/Tickets/SchoolTickets?selectedSchool=" + data + "&TechID=" + @Model.TechID + "'>" + data + "</a>"
                            }
                        },
                        {
                            data: "OpenTickets",
                            render: function (data, type, ticket) {
                                return "<span class='badge'>"+ data + "</span>"
                            }
                        }
                    ]
                });

                var table3 = $("#allschools").DataTable({
                    ajax: {
                        url: "/api/TechOpenTickets",
                        dataSrc: ""
                    },
                    retrieve: true,
                    bPaginate: false, //hide pagination
                    bFilter: false, //hide Search bar
                    bInfo: false, // hide showing entries
                    columns: [
                        {
                            data: "School",
                            render: function (data, type, ticket) {
                                return "<a style='color:grey;' href='/Tickets/SchoolTickets?selectedSchool=" + data + "'>" + data + "</a>"
                            }
                        },
                        {
                            data: "OpenTickets",
                            render: function (data, type, ticket) {
                                return "<span class='badge'>"+ data + "</span>"
                            }
                        }
                    ]
                });
            


                table1.ajax.reload();
                table2.ajax.reload();
                table3.ajax.reload();
                setTimeout(RefreshTables, 5000);
            }

            RefreshTables();
        });
</script>
